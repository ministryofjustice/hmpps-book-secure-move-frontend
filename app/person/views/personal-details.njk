{% extends "./_layout.njk" %}

{% block tabContent %}
  <h2 class="govuk-heading-m">
    {{ t("person::personal_details.heading") }}

    {% if updateLink %}
      <a href="{{ updateLink }}" class="govuk-link govuk-body app-!-float-right" data-update-link="edit_personal_details">
        <strong>{{ t("actions::change", {
          context: "with_visually_hidden_text",
          text: step.pageTitle
        }) | safe }}</strong>
      </a>
    {% endif %}
  </h2>

  {{ govukSummaryList(personalDetailsSummary) }}
{% endblock %}
