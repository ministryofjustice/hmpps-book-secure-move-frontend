{% extends "layouts/base.njk" %}

{% block pageTitle %}
  What’s new
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: t("actions::back"),
    href: "/",
    attributes: {
      onclick: "history.back(); return false"
    }
  }) }}
{% endblock %}

{% block content %}
  <header>
    <h1 class="govuk-heading-xl govuk-!-margin-top-1 govuk-!-margin-bottom-6">
      What’s new
    </h1>
  </header>

  <p class="govuk-!-margin-bottom-5">
    The latest updates and improvements to Book a secure move.
  </p>

  {% for post in posts %}
    <div class="govuk-!-padding-bottom-7">
      <h2 class="govuk-heading-m govuk-!-margin-top-4 govuk-!-margin-bottom-5">
        {{ post.date }}
      </h2>

      <hr>

      <h3 class="govuk-heading-l govuk-!-margin-top-5">{{ post.title }}</h3>

      {{ post.body | safe }}
    </div>
  {% endfor %}
{% endblock %}
