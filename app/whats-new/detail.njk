{% extends "layouts/base.njk" %}

{% block pageTitle %}
  {{ post.title }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: t("actions::back"),
    href: "/",
    attributes: {
      onclick: "history.back(); return false"
    }
  }) }}
{% endblock %}

{% block content %}
  <header>
    <h1 class="govuk-heading-xl govuk-!-margin-top-1 govuk-!-margin-bottom-6">
      {{ post.title }}
    </h1>
  </header>

  <div class="govuk-!-padding-bottom-7">
    <p class="govuk-heading-m govuk-!-margin-top-4 govuk-!-margin-bottom-5">
      {{ post.date }}
    </p>

    <hr>

    {{ post.body | safe }}
  </div>
{% endblock %}
