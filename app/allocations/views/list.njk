{% extends "layouts/list.njk" %}

{% block headerActions %}
  {% if canAccess('allocation:create') %}
    {{ govukButton({
      isStartButton: true,
      text: t("actions::create_allocation"),
      href: "/allocation/new",
      classes: "govuk-!-margin-top-2 app-print--hide"
    }) }}
  {% endif %}
{% endblock %}

{% block pageContent %}
  {{ appFilter({
    items: filter
  }) }}

  {% if resultsAsTable.active.rows.length %}
    {{ govukTable(resultsAsTable.active) }}
  {% else %}
    {{ appMessage({
      classes: "app-message--muted govuk-!-margin-top-7",
      allowDismiss: false,
      content: {
        html: t("allocations::dashboard.no_results")
      }
    }) }}
  {% endif %}
{% endblock %}
