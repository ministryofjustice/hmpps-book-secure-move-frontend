{
  "name": "pecs-frontend",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Frontend rendering app for the PECS service",
  "homepage": "https://github.com/ministryofjustice/pecs-frontend#readme",
  "bugs": {
    "url": "https://github.com/ministryofjustice/pecs-frontend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/pecs-frontend.git"
  },
  "engines": {
    "node": "11"
  },
  "main": "start.js",
  "scripts": {
    "clean": "del .build/",
    "build": "npm run clean && webpack --config webpack.config.js",
    "start": "node --use-strict start.js",
    "develop": "run-p watch:js:*",
    "test": "NODE_ENV=test LOG_LEVEL=silent mocha './app/**/*.test.js' './common/**/*.test.js' --opts ./test/unit/mocha.opts",
    "lint": "eslint ./",
    "coverage": "nyc --reporter=html --reporter=lcov npm test",
    "watch:js:client": "webpack --watch --progress",
    "watch:js:server": "nodemon $NODE_DEBUG_OPTION --inspect",
    "circle:coverage": "nyc --reporter=lcov --reporter=html npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=reports/mocha/test-results.xml",
    "circle:lint": "npm run lint -- --format junit --output-file ./reports/eslint/eslint.xml"
  },
  "pre-commit": [
    "lint"
  ],
  "contributors": [
    "Dom Smith <dom@teneightfive.com> (http://github.com/teneightfive)"
  ],
  "keywords": [
    "ministryofjustice",
    "pecs"
  ],
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "govuk-frontend": "^2.10.0",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "browser-sync": "^2.26.5",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "css-loader": "^2.1.1",
    "del-cli": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.6.0",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.11",
    "nyc": "^14.1.0",
    "pre-commit": "^1.2.2",
    "sass-loader": "^7.1.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1"
  }
}
