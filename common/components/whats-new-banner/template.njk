<div id="whats-new-banner" class="whats-new-banner" data-module="app-whats-new-banner"
     data-content-date="{{ params.date }}">
  <div class="govuk-width-container banner-padding">
    <div class="govuk-grid-row text-padding">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">What's new</h1>
      </div>
      <div class="govuk-grid-column-one-third">
        <a href="#" id="dismiss-banner-button" class="govuk-link dismiss-button">Dismiss</a>
      </div>
    </div>
    <div class="govuk-grid-row text-padding">
      <div class="govuk-grid-column-full">
        <p>{{ params.date }}: {{ params.body }}</p>
        <a href="/whats-new" id="whats-new-page-link" class="govuk-link">Read more about these changes.</a>
      </div>
    </div>
  </div>
</div>
